<Window x:Class="GoldenTasksDesktop.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:GoldenTasksDesktop.ViewModels" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoldenTasksDesktop.Views"
        mc:Ignorable="d"
        Title="DashboardView" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Usuario.Nombre, StringFormat='¡Bienvenido, {0}!', UpdateSourceTrigger=PropertyChanged}"
                   Height="30" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Usuario.Tareas}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Nombre}" Padding="5"/>
                        <TextBlock Grid.Column="1" Text="{Binding Estado}" Padding="5"/>
                        <Button Grid.Column="2" Command="{Binding DataContext.CompletarTareaCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                CommandParameter="{Binding Id}" Content="Completar" Margin="5,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Button Grid.Row="2"
                Content="Agregar Tarea"
                Command="{Binding AgregarTareaCommand}"
                Height="40"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
